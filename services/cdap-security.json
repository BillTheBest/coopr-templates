{
  "dependencies": {
    "conflicts": [],
    "install": {
      "requires": [
        "base"
      ],
      "uses": [
        "cdap"
      ]
    },
    "provides": [],
    "runtime": {
      "requires": [
        "zookeeper-server"
      ],
      "uses": []
    }
  },
  "description": "CDAP Security module",
  "name": "cdap-security",
  "provisioner": {
    "actions": {
      "configure": {
        "fields": {
          "run_list": "recipe[cdap::config]"
        },
        "type": "chef-solo"
      },
      "initialize": {
        "fields": {
          "run_list": "recipe[cdap::security_init]"
        },
        "type": "chef-solo"
      },
      "install": {
        "fields": {
          "run_list": "recipe[cdap::security]"
        },
        "type": "chef-solo"
      },
      "start": {
        "fields": {
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"cdap-auth-server\": \"start\" } } } }",
          "run_list": "recipe[cdap::security],recipe[coopr_service_manager::default]"
        },
        "type": "chef-solo"
      },
      "stop": {
        "fields": {
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"cdap-auth-server\": \"stop\" } } } }",
          "run_list": "recipe[cdap::security],recipe[coopr_service_manager::default]"
        },
        "type": "chef-solo"
      }
    }
  }
}
