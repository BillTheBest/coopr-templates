{
  "name": "spark-master",
  "description": "Spark Master",
  "dependencies": {
    "conflicts": [],
    "install": {
      "requires": [ "base" ],
      "uses": []
    },
    "provides": [],
    "runtime": {
      "requires": [],
      "uses": []
    }
  },
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "fields": {
          "run_list": "recipe[hadoop::spark_master]"
        }
      },
      "configure": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[hadoop_wrapper::default],recipe[hadoop::spark]"
        }
      },
      "start": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[hadoop_wrapper::default],recipe[hadoop::spark_master],recipe[coopr_service_manager::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"spark-master\": \"start\" } } } }" 
        }
      },
      "stop": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[hadoop_wrapper::default],recipe[hadoop::spark_master],recipe[coopr_service_manager::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"spark-master\": \"stop\" } } } }" 
        }
      }
    }
  }
}
