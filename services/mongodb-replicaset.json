{
  "name": "mongodb-replicaset",
  "description": "Replicated MongoDB instance",
  "dependencies": {
    "conflicts": [],
    "install": {
      "requires": [ "base" ],
      "uses": []
    },
    "provides": [ "mongodb" ],
    "runtime": {
      "requires": [],
      "uses": []
    }
  },
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "fields": {
          "run_list": "recipe[mongodb::replicaset]"
        }
      },
      "configure": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[mongodb::replicaset]"
        }
      },
      "start": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[mongodb::default],recipe[coopr_service_manager::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"mongodb\": \"start\" } } } }" 
        }
      },
      "stop": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[mongodb::default],recipe[coopr_service_manager::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"mongodb\": \"stop\" } } } }" 
        }
      }
    }
  }
}
